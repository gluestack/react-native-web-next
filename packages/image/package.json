{
  "name": "react-native-web-next-image",
  "version": "0.1.0-alpha.1",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "typings": "lib/typescript/index.d.ts",
  "description": "An Image which uses React Native Image for Next Image",
  "keywords": [
    "react",
    "native",
    "react-native",
    "image",
    "headless",
    "typescript",
    "component",
    "nextjs"
  ],
  "scripts": {
    "prepare": "bob build",
    "release": "release-it",
    "build": "bob build",
    "clean": "rm -rf lib",
    "dev:web": "cd example/native && yarn web --clear",
    "storybook": "cd example/native/storybook && yarn web"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@gluestack-style/react": "^0.2.51",
    "@types/react-native": "^0.71.6",
    "file-loader": "^6.2.0",
    "react": "^18.2.0",
    "react-native": "^0.70.7",
    "react-native-web": "^0.18.12",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "react-native-builder-bob": "^0.20.1",
    "url-loader": "^4.1.1",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "peerDependencies": {
    "@types/react-native": ">=0.72",
    "react": ">=16",
    "react-dom": ">=16",
    "react-native": ">=0.72",
    "react-native-svg": ">=13.4.0",
    "react-native-web": ">=0.19"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      [
        "module"
      ],
      "typescript"
    ]
  },
  "files": [
    "lib/",
    "src/"
  ],
  "jest": {
    "preset": "jest-expo",
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/react-native/jest/preprocessor.js"
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/example/*",
      "<rootDir>/lib/"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(@react-native|react-native|expo-asset|expo-constants|@unimodules|react-native-unimodules|expo-font|react-native-svg|@expo/vector-icons|react-native-vector-icons|@react-native-aria/checkbox|@react-native-aria/interactions|@react-native-aria/button|@react-native-aria/switch|@react-native-aria/toggle|@react-native-aria/utils|@react-native-aria/*))"
    ],
    "setupFiles": [
      "<rootDir>/src/jest/mock.ts"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "dependencies": {
    "ts-loader": "^9.4.4"
  },
  "author": "",
  "license": "ISC"
}
